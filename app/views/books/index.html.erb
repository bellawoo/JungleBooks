<p id="notice"><%= notice %></p>

<h1>Jungle Books</h1>
<h2>This Month's Suggestions</h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.total_votes %></td>
        <td><%= book.title %></td>
        <td>by <%= book.author%></td>
        <td><%= link_to 'Show', book %></td>
        <% if current_user.host? %>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center-block">
  <h1>Winning Books</h1>
  <div class="this-month">
    <h2>This month, we're reading...</h2>
    <h3><%= @most_recent_winner.title %><br>
    <small>by <%= @most_recent_winner.author %></small></h3>
    <p><a href="<%= @most_recent_winner.product_page %>">Buy the book on Amazon</a></p>
  </div>
  <h2>In the past, we've read...</h2>
  <div class="table-responsive">
  <table class="table">
    <thead>
      <th>Title</th>
      <th>Author</th>
      <th></th>
    </thead>
    <tbody>
      <% @winners.reverse.drop(1).each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author%></td>
        <td><a href="<%= book.product_page %>">Amazon Listing</a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>